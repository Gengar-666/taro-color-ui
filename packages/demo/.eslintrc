{
  "extends": ["taro"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": ["./babel.config.js"],
      "rules": {
        "import/no-commonjs": "off"
      }
    }
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"]
  }
}
